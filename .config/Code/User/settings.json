{
  "editor.fontFamily": "'Iosevka Term', monospace",
  "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [{ "before": ["j", "k"], "after": ["<Esc>"] }],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["w"], "commands": [":w"] },
    { "before": ["<leader>", "v"], "commands": [":vs"] },
    { "before": ["<leader>", "s"], "commands": [":sp"] },
    { "before": ["q"], "after": ["C-w", "q"] },
    { "before": [":"], "commands": ["workbench.action.showCommands"] },
    { "before": ["<leader>", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["<leader>", "p"], "commands": [":tabp"] },
    { "before": ["<leader>", "n"], "commands": [":tabn"] },
    { "before": ["<leader>", "h"], "after": ["C-w", "h"] },
    { "before": ["<leader>", "j"], "after": ["C-w", "j"] },
    { "before": ["<leader>", "k"], "after": ["C-w", "k"] },
    { "before": ["<leader>", "l"], "after": ["C-w", "l"] },
    { "before": ["<leader>", ":"], "after": [":"] },
    { "before": [">"], "commands": ["editor.action.indentlines"] },
    { "before": ["<"], "commands": ["editor.action.outdentlines"] },
    { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] }
  ],
  "window.restoreFullscreen": false,
  "editor.formatOnSave": true,
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "workbench.colorCustomizations": {
    "[Cute]": {
      "editor.background": "#ffdfea",
      "panel.background": "#ffdfea",
      "sideBar.background": "#ffdfea",
      "editorGroupHeader.tabsBackground": "#ffbbcf",
      "terminal.background": "#ffc5da",
      "menu.background": "#ffbbcf",
      "activityBar.background": "#ffbbcf",
      "activityBar.foreground": "#dd0000",
      "activityBar.inactiveForeground": "#770000"
    }
  },
  "window.nativeFullScreen": false,
  "editor.minimap.scale": 1,
  "editor.minimap.renderCharacters": false,
  "workbench.statusBar.visible": true,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "git.confirmSync": false,
  "editor.renderControlCharacters": true,
  "breadcrumbs.enabled": false,
  "telemetry.enableTelemetry": false,
}
