{
    "window.customMenuBarAltFocus": false,
    "window.menuBarVisibility": "toggle",
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "workbench.colorTheme": "Solarized Light",
    "editor.fontFamily": "'Iosevka', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "vim.incsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["w"], "commands": [":w"], },
        { "before": ["<leader>", "v"], "commands": [":vs"], },
        { "before": ["<leader>", "s"], "commands": [":sp"], },
        { "before": ["q"], "commands": [":q"], },
        { "before": [":"], "commands": ["workbench.action.showCommands"], },
        { "before": ["<leader>", "f"], "commands": ["workbench.action.quickOpen"], },
        { "before": ["<leader>", "p"], "commands": [":tabp"], },
        { "before": ["<leader>", "n"], "commands": [":tabn"], },
        { "before": ["<leader>", "h"], "after": ["C-w", "h"], },
        { "before": ["<leader>", "j"], "after": ["C-w", "j"], },
        { "before": ["<leader>", "k"], "after": ["C-w", "k"], },
        { "before": ["<leader>", "l"], "after": ["C-w", "l"], },
        { "before": ["<leader>", ":"], "after": [":"], },
        { "before": [ ">" ], "commands": [ "editor.action.indentlines" ] },
        { "before": [ "<" ], "commands": [ "editor.action.outdentlines" ] },
    ],
}